<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<div id="create_post">
  <%= render template: 'posts/new', post: @post %>
</div>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="my_posts">
    <% @posts.each do |post| %>
      <%= render 'post_row', post: post %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
